@model Project.Models.Livre

@{
  ViewData["Title"] = "Delete Book";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Book</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
  <h4>@Model.Titre</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      Title
    </dt>
    <dd class="col-sm-10">
      @Model.Titre
    </dd>
    <dt class="col-sm-2">
      Publishing House
    </dt>
    <dd class="col-sm-10">
      @Model.Maisondédition
    </dd>
    <dt class="col-sm-2">
      Edition Date
    </dt>
    <dd class="col-sm-10">
      @Model.Datedédition.ToShortDateString()
    </dd>
    <dt class="col-sm-2">
      Summary
    </dt>
    <dd class="col-sm-10">
      @Model.Résumé
    </dd>
    <dt class="col-sm-2">
      Author
    </dt>
    <dd class="col-sm-10">
      @Model.Auteur?.Prenom @Model.Auteur?.Nom
    </dd>
  </dl>

  <form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
  </form>
</div>
