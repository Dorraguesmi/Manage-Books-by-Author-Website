@model Project.Models.Auteur

<h2>Add a New Auteur</h2>

<form asp-action="Create" method="post">
  <div class="form-group">
    <label asp-for="Prenom">First Name</label>
    <input asp-for="Prenom" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Nom">Second Name</label>
    <input asp-for="Nom" class="form-control" />
  </div>
  <div class="form-group">
    <label for="DatedeNaissance">Birthdate</label><br />
    <input type="date" asp-for="DatedeNaissance" class="form-control" />
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>

